project:
  xmlns: "http://maven.apache.org/POM/4.0.0"
  xmlns:xsi: "http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation: "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"

  modelVersion: "4.0.0"

  groupId: "com.example.maven-project"
  artifactId: "maven-project"
  packaging: "pom"
  version: "1.0-SNAPSHOT"
  name: "Maven Project"
  description: "Sample Maven project with a working, deployable site."
  url: "http://www.example.com"

  properties:
    project.build.sourceEncoding: "UTF-8"
    project.reporting.outputEncoding: "UTF-8"

  distributionManagement:
    site:
      id: "site-server"
      name: "Test Project Site"
      url: "file:///tmp/maven-project-site"

  build:
    plugins:
      - artifactId: "maven-compiler-plugin"
        version: "3.8.1"
        configuration:
          source: "17"
          target: "17"
      
      - artifactId: "maven-release-plugin"
        version: "3.0.0-M1"
        configuration:
          autoVersionSubmodules: true
      
      - artifactId: "maven-site-plugin"
        version: "3.9.1"
        configuration:
          reportPlugins:
            - artifactId: "maven-checkstyle-plugin"
            - artifactId: "maven-jxr-plugin"
            - artifactId: "maven-javadoc-plugin"
            - artifactId: "maven-pmd-plugin"
            - artifactId: "maven-surefire-report-plugin"
            - groupId: "org.codehaus.mojo"
              artifactId: "findbugs-maven-plugin"
            - groupId: "org.codehaus.mojo"
              artifactId: "taglist-maven-plugin"

    pluginManagement:
      plugins:
        - artifactId: "maven-checkstyle-plugin"
          version: "3.1.0"
        
        - artifactId: "maven-compiler-plugin"
          version: "3.8.1"
        
        - artifactId: "maven-war-plugin"
          version: "3.3.1"
        
        - artifactId: "maven-javadoc-plugin"
          version: "3.3.0"
        
        - artifactId: "maven-jxr-plugin"
          version: "2.3"
        
        - artifactId: "maven-pmd-plugin"
          version: "3.12.0"
        
        - artifactId: "maven-project-info-reports-plugin"
          version: "3.0.0"
        
        - artifactId: "maven-release-plugin"
          version: "3.0.0-M1"
        
        - artifactId: "maven-resources-plugin"
          version: "3.1.0"
        
        - artifactId: "maven-site-plugin"
          version: "3.9.1"
        
        - artifactId: "maven-surefire-report-plugin"
          version: "2.22.2"
        
        - artifactId: "maven-surefire-plugin"
          version: "3.0.0-M5"
        
        - groupId: "org.codehaus.mojo"
          artifactId: "findbugs-maven-plugin"
          version: "3.0.5"
        
        - groupId: "org.codehaus.mojo"
          artifactId: "taglist-maven-plugin"
          version: "2.5"
        
        - groupId: "org.mortbay.jetty"
          artifactId: "jetty-maven-plugin"
          version: "9.4.35.v20201120"

  dependencyManagement:
    dependencies:
      - groupId: "javax.servlet"
        artifactId: "servlet-api"
        version: "2.5"
      
      - groupId: "javax.servlet.jsp"
        artifactId: "jsp-api"
        version: "2.2"
      
      - groupId: "junit"
        artifactId: "junit-dep"
        version: "4.10"
        scope: "test"
      
      - groupId: "org.hamcrest"
        artifactId: "hamcrest-core"
        version: "1.2.1"
        scope: "test"
      
      - groupId: "org.hamcrest"
        artifactId: "hamcrest-library"
        version: "1.2.1"
        scope: "test"
      
      - groupId: "org.mockito"
        artifactId: "mockito-core"
        version: "1.8.5"
        scope: "test"

  scm:
    connection: "scm:git:https://github.com/Adarsh0871/java-project.git"
    developerConnection: "scm:https://github.com/Adarsh0871/java-project.git"
    tag: "HEAD"
    url: "https://github.com/Adarsh0871/java-project.git"

  prerequisites:
    maven: "3.6.3"
